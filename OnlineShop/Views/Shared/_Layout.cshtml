@using System.Net.Http
@using OnlineShop.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("roleName");
    int count = 0;
    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");
    if (products==null)
    {
        products=new List<Products>();
    }
    count = products.Count();
   
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JustBuyyy</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    </environment>
    <environment exclude="Development">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    </environment>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/css/alertify.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .error{
            color:red;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand"  href="https://localhost:44310/">Justbuyyy</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @if (userRole == "Super user")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="ProductTypes" asp-action="Index">Product Type</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="SpecialTag" asp-action="Index">Tag Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" href="https://localhost:44310/admin/role/assign">Admin Control</a>
                            </li>


                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Cart">
                                <i class="fas fa-shopping-cart"></i>
                                (@count)
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br/>
    <br/>
        
            <!--footer-->
            <!--foooter-->
            <section style="background-color: #e6e6e6; " class="py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 d-flex flex-column">
                            <h2>JustBuyyy</h2><br>
                            <h6>Tikri Building</h6>
                            <h6>Gurgaon</h6>
                            <h6>India</h6><br>


                        </div>
                        <div class="col-md-2">

                            <h5>Useful Links</h5><br>
                            <div class="list ">
                                <h6>Home</h6>
                                <h6>About us</h6>
                                <h6>Services</h6>
                                <h6>Terms of service</h6>
                                <h6>Privacy policy</h6>

                            </div>

                        </div>

                        <div class="col-md-2 mt-2 mt-md-0">
                            <h5>Our Services</h5><br>
                            <div class="list ">
                                <h6>Web Design</h6>
                                <h6>Web Development</h6>
                                <h6>Product Management</h6>
                                <h6>Marketing</h6>
                                <h6>Graphic Design</h6>

                            </div>

                        </div>
                        <div class="col-md-5 px-5 mt-3" id="news">
                            <h5>Join Our Newsletter</h5>
                            <h6 class="my-3">Register for Regular Updates</h6>
                            <div class="input-group mt-5">
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-md btn-info">Subscribe</button>

                                </div>
                                <input type="text" class="form-control">
                            </div>

                        </div>
                    </div>
                </div>
            </section>

            <!--footer 2-->

            <section style="background-color: whitesmoke" class=" py-4">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <h6>© Copyright JustBuyyy. All Rights Reserved</h6>
                            <h6 style="color: #428bca">Designed by INTADMDF012 POD 2</h6>

                        </div>
                        <div class="col-md-4"></div>
                        <div class="col-md-4 text-center">
                            <a href=""> <i class="fab fa-facebook-square fa-2x px-2"></i></a>
                            <i class="fab fa-twitter-square fa-2x px-2"></i>
                            <a href=""><i class="fab fa-instagram fa-2x px-2"></i></a>
                            <i class="fab fa-linkedin fa-2x px-2"></i>
                            <i class="fab fa-skype fa-2x  px-2"></i>
                        </div>

                    </div>

                </div>

            </section>
       
  
    <environment include="Development">
        @*<script src="https://code.jquery.com/jquery-3.3.1.js"></script>*@
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    </environment>
    <environment exclude="Development">
        @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
